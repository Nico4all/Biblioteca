@page
@model Biblioteca.Pages.Generos.EditModel
@{
    ViewData["Title"] = "Editar Género";
}

<h1>Editar Género</h1>

<h4>Género</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Genero.Id" />
            <div class="form-group">
                <label asp-for="Genero.Description" class="control-label"></label>
                <input asp-for="Genero.Description" class="form-control" />
                <span asp-validation-for="Genero.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-page="./Index" class="btn btn-primary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>


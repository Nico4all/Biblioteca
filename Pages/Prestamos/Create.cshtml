@page
@model Biblioteca.Pages.Prestamos.CreateModel
@{
    ViewData["Title"] = "Crear User";
}

<h2>Create Prestamo</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Prestamo.Inicio" class="control-label"></label>
        <input asp-for="Prestamo.Inicio" class="form-control" />
        <span asp-validation-for="Prestamo.Inicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prestamo.Fin" class="control-label"></label>
        <input asp-for="Prestamo.Fin" class="form-control" />
        <span asp-validation-for="Prestamo.Fin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prestamo.UserId" class="control-label"></label>
        <select asp-for="Prestamo.UserId" class="form-control" asp-items="Model.Users"></select>
        <span asp-validation-for="Prestamo.UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prestamo.BookId" class="control-label"></label>
        <select asp-for="Prestamo.BookId" class="form-control" asp-items="Model.Books"></select>
        <span asp-validation-for="Prestamo.BookId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"   />
}
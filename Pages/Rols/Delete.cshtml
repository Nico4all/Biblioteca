@page
@model Biblioteca.Pages.Rols.DeleteModel
@{
    ViewData["Title"] = "Eliminar Rol";
}

<h1>Eliminar Rol</h1>

<h3>¿Estás seguro de que quieres eliminar este Rol?</h3>
<div>
    <h4>Rol</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Rol.Name
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Rol.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-primary">Volver a la lista</a>
    </form>
</div>